{
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2021",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "node_modules/tsconfig-paths/register"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules/",
        "./dist/"
    ],
}
